<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".fragment.WaveLoadingFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_nam"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_love"
                android:textColor="@color/white"
                android:fontFamily="@font/candlescript_pro"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Năm"
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:fontFamily="@font/candlescript_pro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_thang"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_love"
                android:textColor="@color/white"
                android:fontFamily="@font/candlescript_pro"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Tháng"
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:fontFamily="@font/candlescript_pro"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_ngay"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_love"
                android:textColor="@color/white"
                android:fontFamily="@font/candlescript_pro"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Ngày"
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/candlescript_pro">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_gio"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_love"
                android:textColor="@color/white"
                android:fontFamily="@font/candlescript_pro"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Giờ  "
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/candlescript_pro">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_phut"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_love"
                android:textColor="@color/white"
                android:fontFamily="@font/candlescript_pro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Phút"
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/candlescript_pro">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_giay"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_love"
                android:textColor="@color/white"
                android:fontFamily="@font/candlescript_pro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giây"
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:fontFamily="@font/candlescript_pro" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

